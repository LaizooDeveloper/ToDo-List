<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ToDo List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body data-bs-theme="light">


  <%- include("partials/navbar") %>

  <div class="container mt-4">
    <!-- Progress Bar -->
    <div class="mb-4">
      <label>Progress:</label>
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: <%= progress %>%;">
          <%= progress %>%
        </div>
      </div>
    </div>

    <!-- Add Task Form -->
    <form action="/add" method="POST" class="row g-2 mb-4">
      <div class="col-md-3">
        <input type="text" name="task" class="form-control" placeholder="Task" required>
      </div>
      <div class="col-md-2">
        <select name="category" class="form-select">
          <option>Study</option>
          <option>Work</option>
          <option>Personal</option>
        </select>
      </div>
      <div class="col-md-2">
        <input type="date" name="deadline" class="form-control">
      </div>
      <div class="col-md-2">
        <select name="priority" class="form-select">
          <option value="High">🔴 High</option>
          <option value="Medium">🟡 Medium</option>
          <option value="Low">🟢 Low</option>
        </select>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Add</button>
      </div>
    </form>

    <!-- Task List -->
    <ul class="list-group">
      <% tasks.forEach(task => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <form action="/toggle/<%= task.id %>" method="POST" style="display:inline;">
              <button class="btn btn-sm <%= task.done ? 'btn-success' : 'btn-outline-success' %>">
                ✓
              </button>
            </form>
            <span class="<%= task.done ? 'text-decoration-line-through text-muted' : '' %>">
              <%= task.text %> | <em><%= task.category %></em> | <small><%= task.deadline %></small> | 
              <span class="badge 
                <%= task.priority === 'High' ? 'bg-danger' : task.priority === 'Medium' ? 'bg-warning text-dark' : 'bg-success' %>">
                <%= task.priority %>
              </span>
            </span>
          </div>
          <div>
            <!-- Edit Button -->
            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editModal<%= task.id %>">✏️</button>
            <form action="/delete/<%= task.id %>" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-danger">🗑️</button>
            </form>
          </div>
        </li>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal<%= task.id %>" tabindex="-1">
          <div class="modal-dialog">
            <form action="/edit/<%= task.id %>" method="POST" class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Edit Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <input type="text" name="newText" value="<%= task.text %>" class="form-control mb-2" required>
                <select name="newCategory" class="form-select mb-2">
                  <option <%= task.category === 'Study' ? 'selected' : '' %>>Study</option>
                  <option <%= task.category === 'Work' ? 'selected' : '' %>>Work</option>
                  <option <%= task.category === 'Personal' ? 'selected' : '' %>>Personal</option>
                </select>
                <input type="date" name="newDeadline" value="<%= task.deadline %>" class="form-control mb-2">
                <select name="newPriority" class="form-select">
                  <option value="High" <%= task.priority === 'High' ? 'selected' : '' %>>High</option>
                  <option value="Medium" <%= task.priority === 'Medium' ? 'selected' : '' %>>Medium</option>
                  <option value="Low" <%= task.priority === 'Low' ? 'selected' : '' %>>Low</option>
                </select>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </form>
          </div>
        </div>
      <% }) %>
    </ul>
  </div>

  <%- include("partials/footer") %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
<script>
  const themeToggle = document.getElementById("themeToggle");
  const root = document.documentElement;

  if (localStorage.getItem("theme")) {
    const savedTheme = localStorage.getItem("theme");
    document.body.setAttribute("data-bs-theme", savedTheme);
    themeToggle.textContent = savedTheme === "dark" ? "☀️" : "🌙";
  }

  themeToggle.addEventListener("click", () => {
    let current = document.body.getAttribute("data-bs-theme") || "light";
    let next = current === "light" ? "dark" : "light";
    document.body.setAttribute("data-bs-theme", next);
    localStorage.setItem("theme", next);
    themeToggle.textContent = next === "dark" ? "☀️" : "🌙";
  });
</script>
